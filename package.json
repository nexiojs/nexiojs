{
  "name": "workspace",
  "type": "module",
  "private": true,
  "scripts": {
    "release": "bun run ./scripts/prepublish.ts && changeset publish",
    "build:common": "bun run --filter=@nexiojs/common build",
    "build:core": "bun run --filter=@nexiojs/core build",
    "build:rest": "find packages -mindepth 1 -maxdepth 1 -type d | grep -v 'common\\|core' | grep -v 'packages$' | sed -e 's/packages/@nexiojs/g' | xargs -I {} bun run --filter {} build",
    "build": "bun build:common && bun build:core && bun build:rest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@faker-js/faker": "^8.4.1",
    "@swc/core": "^1.7.0",
    "@types/bun": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.1",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "graphql": "16.9.0"
  },
  "dependencies": {
    "pino": "^9.3.2",
    "query-string": "^9.1.0"
  }
}
