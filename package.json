    "@types/bun": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  }
